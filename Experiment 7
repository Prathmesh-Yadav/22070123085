/*
PRN 22070123085
Experiment - 7
Displaying week name using switch case
*/

#include <iostream>
using namespace std;

int main()

{
    int week = 7;

    cout<<"Enter the day number: "<<endl;
    cin>>week;

    switch(week)
    {
        case 1:
        {
            cout<<"The day is Monday"<<endl;
            break;
        }

        case 2:
        {
            cout<<"The day is Tuesday"<<endl;
            break;
        }

        case 3:
        {
            cout<<"The day is Wednesday"<<endl;
            break;
        }

        case 4:
        {
            cout<<"The day is Thursday"<<endl;
            break;
        }

        case 5:
        {
            cout<<"The day is Friday"<<endl;
            break;
        }

        case 6:
        {
            cout<<"The day is Saturday"<<endl;
            break;
        }

        case 7:
        {
            cout<<"The day is Sunday"<<endl;
            break;
        }

        default:
        {
            cout<<"Wrong input"<<endl;
        }

    }
}

/*
OUTPUT:
Enter the day number: 
5
The day is Friday
*/
